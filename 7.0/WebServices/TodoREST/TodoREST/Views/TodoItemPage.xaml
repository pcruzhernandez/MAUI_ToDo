<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
			 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
			 x:Class="TodoREST.Views.TodoItemPage" 
			 Title="Last Day"
             BackgroundColor="Black">
    <ContentPage.Resources>
        <Style TargetType="Label">
            <Setter Property="Margin"
                    Value="0,10,0,10" />
            <Setter Property="FontAttributes"
                    Value="Bold" />
            <Setter Property="FontSize"
                    Value="20" />
        </Style>
        <Style TargetType="Button">
            <Setter Property="Margin"
                    Value="0,5,0,5" />
        </Style>
    </ContentPage.Resources>
	<VerticalStackLayout Margin="20">
        <Grid >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Image Grid.Column="0" Grid.RowSpan="5" Source="/Resources/Images/flyer2.jpeg" Aspect="Fill"/>
            <Label Text="{Binding Path=TodoItem.PDateTimeLarge}" Grid.Column="1" Grid.Row="0" TextColor="White" FontSize="Small"/>
            <Label Text="{Binding Path=TodoItem.PName}" Grid.Column="1" Grid.Row="1" TextColor="White" />
            <Label Text="{Binding Path=TodoItem.PEventLocation}" Grid.Column="1" Grid.Row="2" TextColor="White" />
        </Grid>
        <Label Text="{Binding Path=TodoItem.PDescription}" TextColor="DarkOrange" />
        <Label Text="Entradas" TextColor="DarkOrange" />
        <!--<Label Text="Name" />
		<Entry Text="{Binding Path=TodoItem.PName}" 
               Placeholder="Enter item" />
		<Label Text="Notes" />
		--><!--<Entry Text="{Binding Path=TodoItem.Notes}"
               Placeholder="Enter notes" />
		<Label Text="Done" />
		<Switch IsToggled="{Binding Path=TodoItem.Done}" />--><!--
		<Button Text="Save" 
                Clicked="OnSaveButtonClicked" />
		<Button Text="Delete"
                Clicked="OnDeleteButtonClicked" />
		<Button Text="Cancel" 
                Clicked="OnCancelButtonClicked" />-->
        <ScrollView Grid.Row="1"
                        Orientation="Vertical"
                        VerticalOptions="Fill"
                        BackgroundColor="Transparent"
                        VerticalScrollBarVisibility="Never"
                        HorizontalScrollBarVisibility="Never">
            <Grid RowDefinitions="Auto,Auto"
                      VerticalOptions="FillAndExpand"
                      Padding="0,0,0,0">


                <CollectionView x:Name="collectionView"          
                        SelectionMode="Single"
                        SelectionChanged="OnSelectionChanged">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <VerticalStackLayout>
                                <Border Stroke="black" StrokeThickness="2" StrokeShape="RoundRectangle 10,10,10,10"  >

                                    <Grid BackgroundColor="#282828">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"></ColumnDefinition>
                                            <ColumnDefinition Width="70"></ColumnDefinition>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="40"/>
                                            <RowDefinition Height="auto"/>
                                            
                                        </Grid.RowDefinitions>

                                        <Label Grid.Row="0" Grid.ColumnSpan="1" BackgroundColor="#282828" Padding="10,0,0,0" Text="{Binding PName}" FontSize="Small" FontFamily="Montse" TextColor="White"/>

                                        <Label Grid.Row="1"  Grid.Column="0" VerticalTextAlignment="Start" BackgroundColor="#282828" Padding="10,0,0,0" Text="{Binding PDescription}" FontSize="Small" FontFamily="Montse" TextColor="White"/>

                                        <Label Grid.RowSpan="2" Grid.Column="1" BackgroundColor="#282828" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" Padding="0,0,0,0" Text="{Binding PPrice}" FontSize="Large" FontFamily="Montse" FontAttributes="Bold" TextColor="White" />



                                    </Grid>
                                </Border>
